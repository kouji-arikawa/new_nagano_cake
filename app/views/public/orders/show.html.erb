<div class="container">
  <div class="row">
    <div class="col-8">
      <p class="text-left">注文情報</p>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th scope="col" style="width: 30%">注文日</th>
            <th scope="col" style="width: 70%"><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 30%">配送先</th>
            <th scope="col" style="width: 70%">〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 30%">支払方法</th>
            <th scope="col" style="width: 70%"><%= @order.payment_method_i18n %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 30%">ステータス</th>
            <th scope="col" style="width: 70%"><%= @order.status_i18n %></th>
          </tr>
        </thead>
      </table>
    </div>
    <div class="col-4">
      <p class="text-left">請求情報</p>
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th scope="col" style="width: 50%">商品合計</th>
            <th scope="col" style="width: 50%"><%= (@order.total_payment) - (@order.shoping_cost) %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 50%">配送料</th>
            <th scope="col" style="width: 50%"><%= @order.shoping_cost %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 50%">ご請求額</th>
            <th scope="col" style="width: 50%"><%= @order.total_payment %></th>
          </tr>
       </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-4">
      <p class="text-left">注文内容</p>
      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th scope="col" style="width: 60%">商品</th>
            <th scope="col" style="width: 20%">単価(税込)</th>
            <th scope="col" style="width: 10%">個数</th>
            <th scope="col" style="width: 10%">小計</th>
          </tr>
        </thead>
        <% @order.order_items.each do |order_item| %>
        <tbody>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.item.add_tax_price %></td>
            <td><%= order_item.amount %></td>
            <td><%= order_item.item.add_tax_price * order_item.amount %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>