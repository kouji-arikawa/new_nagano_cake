<div class="container">
  <div class="row">
    <div class="col-8">
      <p class="ml-4">注文情報確認</p>
      <table class="table table-bordered mt3">
        <thead>
          <tr>
            <th scope="col" style="width: 40%">商品名</th>
            <th scope="col" style="width: 20%">単価(税込)</th>
            <th scope="col" style="width: 20%">数量</th>
            <th scope="col" style="width: 20%">小計</th>
          </tr>
        </thead>
        <% @cart_items.each do |cart| %>
        <tbody>
          <tr>
            <td><%= cart.item.name %></td>
            <td><%= (cart.item.add_tax_price).to_s(:delimited) %></td>
            <td><%= cart.amount %></td>
            <td><%= (cart.item.add_tax_price*cart.amount).to_s(:delimited) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
    <div class="col-3 mt-4">
      <table class="table table-bordered mt-3">
        <thead>
          <tr>
            <th scope="col" style="width: 50%">送料</th>
            <th scope="col" style="width: 50%"><%= @order.shoping_cost %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 50%">商品合計</th>
            <th scope="col" style="width: 50%"><%= (@total_price+@order.shoping_cost) - (@order.shoping_cost) %></th>
          </tr>
          <tr>
            <th scope="col" style="width: 50%">請求金額</th>
            <th scope="col" style="width: 50%"><%= (@total_price+@order.shoping_cost).to_s(:delimited) %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <span class="font-8">支払方法</span>
      <p class="ml-3"><%= @order.payment_method_i18n %></p>
      <span class="font-8">お届け先</span>
      <p class="ml-3"><%= @order.address %></p>
      <%= form_with model: @order, url: orders_path, local: true do |f| %>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :name, value: @order.name %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :total_price, value: @total_price %>
      <%= f.hidden_field :shoping_cost, value: @order.shoping_cost %>
      <%= f.hidden_field :total_payment, value: (@total_price+@order.shoping_cost) %>
      <%= f.hidden_field :payment_method, value: @order.payment_method %>
      <%= f.submit "注文を確定する", class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>