<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <table class="table table-bordered mt-5">
        <thead>
          <tr>
            <th scope="col" style="width: 10%">注文日</th>
            <th scope="col" style="width: 45%">配送先</th>
            <th scope="col" style="width: 15%">注文商品</th>
            <th scope="col" style="width: 10%">支払金額</th>
            <th scope="col" style="width: 10%">ステータス</th>
            <th scope="col" style="width: 10%">注文詳細</th>
          </tr>
        </thead>
        <% @order.each do |order| %>
        <tbody>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            <td>
              <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %><br>
              <% end %>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status_i18n %></td>
            <td class="font"><%= link_to "表示する", order_path(order.id), class: "btn-sm btn-primary" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>