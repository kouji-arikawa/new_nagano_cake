<h5 class="m-4">配送先登録/一覧</h5>
<%= form_with model: @address do |f| %>
<p>郵便番号(ハイフンなし)　　<%= f.text_field :postal_code %></p>
<p>住所　　　　　　　　　　　<%= f.text_field :address, :size=>"50" %></p>
<p>宛名　　　　　　　　　　　<%= f.text_field :name %>　　　　　　　　<%= f.submit "新規登録" %></p>
<% end %>

<table class="table md-9">
  <tr>
    <th scope="col" style="width: 15%">郵便番号</th>
    <th scope="col" style="width: 40%">住所</th>
    <th scope="col" style="width: 15%">宛名</th>
    <th scope="col" style="width: 30%"></th>
  </tr>
  <% @addresses.each do |address| %>
  <tbody>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td>
        <%= link_to "編集する", edit_address_path(address.id) %>
        <%= link_to "削除する", address_path(address.id), method: :delete, "deta-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>