<div class="container">
  <h4 class="m-4">商品一覧</h4>
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-3 mt-3">
      <%= image_tag item.image, size: "200X200" %>
      <p class="text-left mt-3">
        <%= item.name %>
      </p>
      <p class="text-left">
        ￥<%= item.price %>
      </p>
    </div>
    <% end %>
  </div>
</div>
