<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="mt-5">
      <%= image_tag @item.image, size: "500X500" %>
      </div>
    </div>
    <div class="col-md-6">
      <h3 class="mt-5 text-left">
        <%= @item.name %>
      </h3>
      <p class="intro">
        <%= @item.introduction %>
      </p>
      <p class="price">
        ¥　<%= @item.add_tax_price.to_s(:dalimited) %>
      </p>
      <%= form_with model: @cart_item do |f| %>
        <%= f.select :amount, *[1..10] %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.submit "カートに入れる" %>
      <% end %>
    </div>
  </div>
</div>