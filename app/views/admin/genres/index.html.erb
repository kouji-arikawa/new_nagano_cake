<main>
  <div class="container px-5 px-sm-0">
    <div class="col-md-3 my-4 text-center" style="background-color: #f0f0f0;">
      <p>ジャンル一覧・追加</p>
    </div>
<%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
  　<%= f.label :ジャンル名 %>
  　<%= f.text_field :name %>
  　<%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>

  <% @genres.each do |genre| %>
  <div class="col-sm-5">
  <table class="table mt-5">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success"  %>
        </td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
  <% end %>
</main>