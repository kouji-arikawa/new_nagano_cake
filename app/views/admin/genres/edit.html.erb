<main>
  <div class="container">
    <div class="col-md-3 my-4 text-center" style="background-color: #f0f0f0">
      <p>ジャンル編集</p>
    </div>
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
    <div class="col-sm-5">
      <span class="genre font-size">ジャンル名　<%= f.text_field :name %>　<%= f.submit '変更を保存', class: "btn btn-success" %></span>
    </div>
  </div>
  <% end %>
</main>