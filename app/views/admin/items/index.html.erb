<h2>商品一覧</h2>


<table>
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
    <td><%= image_tag item.get_image("50x50") %></td>
    <td><%= item.is_active %></td>
  </tr>
  <% end %>
</table>