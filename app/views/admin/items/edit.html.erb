<main>
  <div class="container">
    <div class="col-md-3">
      <p class="mt-4 text-center" style="background-color: #f0f0f0">商品編集</p>
    </div>
    <%= form_with model: @item,url: admin_item_path(@item.id), method: :patch do |f| %>
    <div class="col-md-6">
      <p class="font-5">商品画像　　　<%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %></p>
      <p class="font-5">商品名　　　　<%= f.text_field :name %></p>
      <p class="font-5">商品説明　　　<%= f.text_area :introduction %></p>
      <p class="font-5">ジャンル　　　<%= f.collection_select(:genre_id, Genre.all, :id, :name) %></p>
      <p class="font-5">税抜価格　　　<%= f.number_field :price %>円</p>
      <p class="font-5">
        販売ステータス
        <%= f.radio_button :is_active, true %>
        <%= f.label :is_active, '販売中' %>
        <%= f.radio_button :is_active, false %>
        <%= f.label :is_active, '販売停止中' %>
      </p>
      <%= f.submit '変更を保存', class: "btn btn-success"  %>
    </div>
  </div>
  <% end %>
</main>










